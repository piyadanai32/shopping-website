generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" 
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     String  @default("user") // กำหนดค่า default เป็น "user"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  price       Float
  description String
  image       String
}
